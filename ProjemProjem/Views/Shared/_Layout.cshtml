<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>RTFBLOG.com</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/Kaynak/anasayfasi/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Kaynak/anasayfasi/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Kaynak/detaysayfasi/css/blog-post.css" rel="stylesheet">
    <!-- Custom styles for this template -->

    <link href="~/Content/Kaynak/anasayfasi/css/blog-home.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index/">MVC Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse nav navbar-left" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link"  href="/Home/Hakkimizda/">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim/">İletişim</a>
                    </li>
                </ul>



                <ul class="nav navbar-nav navbar-right top-nav">
                    @if (Session["uyeid"] != null)
                    {
                        <li class="dropdown">

                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> @Session["kullaniciadi"].ToString() <b class="alert"></b></a>
                            <ul class="dropdown-menu">

                                <li class="nav-item">
                                    <a href="/Uye/Index/@Session["uyeid"]">@Session["kullaniciadi"].ToString()<i class=""></i> Profil</a>
                                </li>


                                <li class="nav-item">
                                    <a target="_blank" href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                                </li>
                                @if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                {
                                    <li>
                                        <a href="/Admin/Index/" target="_blank"><i class="fa fa-fw fa-gear" s></i> Admin Paneli</a>
                                    </li>
                                }
                                @if (Convert.ToInt32(Session["yetkiid"]) == 2)
                                {
                                    <li>
                                        <a href="/Admin/Index/" target="_blank"><i class="fa fa-fw fa-gear" s></i> Makele Olustur</a>
                                    </li>
                                }
                                <li class="divider"></li>
                                <li>
                                    <a target="_blank" href="/Uye/Logout/"><i class="fa fa-fw fa-power-off"></i> Çıkış</a>
                                </li>





                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a  href="/Uye/Login/">Giriş</a>
                        </li>
                        <li  class="nav-item">
                            <a href="/Uye/Create/">Kayıt OL</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>












    <!-- Navigation -->
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->

            <div class="col-md-8">
               <br />
                @RenderBody()

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Blog Search Well -->
                <br />
                @Html.Partial("BlogAraPartial")
                <!-- /.input-group -->
                <!-- Blog Categories Well -->
                <br />
                <div class="card my-4">
                    <h5 class="card-header">Kategoriler</h5>
                    <div class="card-body">
                        <div class="row">

                            @{
                                Html.RenderAction("KategoriPartial", "Home");
                            }

                        </div>

                    </div>
                </div>
                <br />
                <div class="card my-4">

                    @{
                        Html.RenderAction("PopulerMakalelerPartial", "Home");
                    }
                </div>
                <br />
                <div class="card my-4">
                    @{
                        Html.RenderAction("SonYorumlarPartial", "Home");
                    }
                </div>
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- Side Widget Well -->

    </div>




    <!-- Footer -->

    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    <script src="~/Content/Kaynak/anasayfasi/vendor/jquery/jquery.js"></script>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/Kaynak/anasayfasi/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Kaynak/anasayfasi/vendor/popper/popper.min.js"></script>
    <script src="~/Content/Kaynak/anasayfasi/vendor/bootstrap/js/bootstrap.min.js"></script>

    @RenderSection("script", false)
</body>
</html>
