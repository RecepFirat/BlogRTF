@model RTFBLOG.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UyeProfil</h2>

<div>

    <hr />
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
            <br />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>

        <dd>
            <img src="@Model.Foto" width="75" class="img img-responsive img-circle" alt="@Model.AdSoyad" />
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Yetki.Yetki1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki1)
            <br />
        </dd>

    </dl>


    <h4>Son Ekledigi Makaleler    </h4>

    @foreach (var item in Model.Makale.OrderByDescending(x => x.MakaleId).Take(5))
    {
    <li>
        <a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a>
    </li>
    }
</div>

