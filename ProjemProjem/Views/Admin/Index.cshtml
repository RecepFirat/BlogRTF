
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<div class="row">
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-dashboard"></i>
                </div>
                <div class="mr-5">Bulunan Makale Sayısı:   @ViewBag.MakeleSayisi </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/AdminMakale/Index">
                <span class="float-left">Detaylar</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="ffa fa-fw fa-comments"></i>
                </div>
                <div class="mr-5"> Üye Sayisi: @ViewBag.YorumSayisi</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="#">
                <span class="float-left">Detaylar</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-comment"></i>
                </div>
                <div class="mr-5">Kategori Sayısı: @ViewBag.KategoriSayisi</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/AdminKategori/Index/">
                <span class="float-left">Detaylar</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-user"></i>
                </div>
                <div class="mr-5">Uye Sayısı: @ViewBag.UyeSayisi</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/AdminUye/Index/">
                <span class="float-left">Detaylar </span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>
