
@using (Html.BeginForm("BlogAra", "Home", FormMethod.Post))
{

<div class="card my-4">
    <h5 class="card-header">Arama</h5>
    <div class="card-body">
        <div class="input-group">
            <input  type="text" name="Ara" class="form-control" placeholder="Arama için Yaz"> @*yakalayacagı kısıma name kısmına yazıyom*@
            <span class="input-group-btn">
                <button class="btn btn-secondary"  type="submit">Ara!</button> @*type kısmınada submit diyorum*@
            </span>
        </div>
    </div>
</div>
}